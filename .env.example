# =============================================================================
# ENVIRONMENT SELECTION
# =============================================================================
# Options: gemini (default), ollama (local/free)
CRIS_ENV=gemini

# =============================================================================
# API KEYS (based on CRIS_ENV)
# =============================================================================

# Required for CRIS_ENV=gemini
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# OLLAMA (only if CRIS_ENV=ollama)
# =============================================================================
# Install: https://ollama.ai
# Then run: ollama pull llama3.2 && ollama serve

OLLAMA_BASE_URL=http://localhost:11434/v1

# =============================================================================
# DATABASE
# =============================================================================

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=crispassword

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma

# =============================================================================
# APPLICATION
# =============================================================================

DEBUG=true
LOG_LEVEL=INFO

# Feature Flags
ENABLE_PREDICTIONS=true
ENABLE_OSINT=false
