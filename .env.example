# =============================================================================
# CRIS - Criminal Reasoning Intelligence System
# Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your values.
# All variables are optional and have sensible defaults.
# =============================================================================

# -----------------------------------------------------------------------------
# Gemini 3 / ADK Configuration
# -----------------------------------------------------------------------------
# Your Google AI API key (required for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Gemini model to use (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Temperature for generation (0.0-1.0, default: 0.7)
GEMINI_TEMPERATURE=0.7

# Maximum tokens for generation (default: 8192)
GEMINI_MAX_TOKENS=8192

# -----------------------------------------------------------------------------
# ADK Configuration
# -----------------------------------------------------------------------------
# Enable ADK tracing for debugging (default: true)
ADK_ENABLE_TRACING=true

# Session timeout in seconds (default: 3600)
ADK_SESSION_TIMEOUT=3600

# Maximum tool calls per agent turn (default: 10)
ADK_MAX_TOOL_CALLS=10

# -----------------------------------------------------------------------------
# A2A Protocol Configuration
# -----------------------------------------------------------------------------
# Enable A2A inter-agent communication (default: true)
A2A_ENABLE=true

# A2A server port (default: 8080)
A2A_SERVER_PORT=8080

# A2A protocol version (default: 0.2)
A2A_PROTOCOL_VERSION=0.2

# Enable streaming responses (default: true)
A2A_ENABLE_STREAMING=true

# -----------------------------------------------------------------------------
# Legacy LLM Configuration (for fallback/comparison)
# -----------------------------------------------------------------------------
# LLM provider: gemini, openai, anthropic (default: gemini)
LLM_PROVIDER=gemini

# OpenAI API key (required if using openai provider)
OPENAI_API_KEY=

# Anthropic API key (required if using anthropic provider)
ANTHROPIC_API_KEY=

# LLM model override (default: gemini-2.0-flash)
LLM_MODEL=gemini-2.0-flash

# LLM temperature (default: 0.7)
LLM_TEMPERATURE=0.7

# LLM max tokens (default: 8192)
LLM_MAX_TOKENS=8192

# -----------------------------------------------------------------------------
# Neo4j Configuration
# -----------------------------------------------------------------------------
# Neo4j connection URI (default: bolt://localhost:7687)
NEO4J_URI=bolt://localhost:7687

# Neo4j username (default: neo4j)
NEO4J_USER=neo4j

# Neo4j password (default: crispassword)
NEO4J_PASSWORD=crispassword

# Maximum connection lifetime in seconds (default: 3600)
NEO4J_MAX_CONNECTION_LIFETIME=3600

# Maximum connection pool size (default: 50)
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# Maximum path depth for graph traversal (default: 6)
NEO4J_MAX_PATH_DEPTH=6

# -----------------------------------------------------------------------------
# Vector Store Configuration
# -----------------------------------------------------------------------------
# Vector store type: chroma (default: chroma)
VECTOR_STORE_TYPE=chroma

# ChromaDB persistence directory (default: ./data/chroma)
CHROMA_PERSIST_DIR=./data/chroma

# Default collection name (default: evidence)
CHROMA_DEFAULT_COLLECTION=evidence

# Embedding model for semantic search (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application name (default: CRIS)
APP_NAME=CRIS

# Application version (default: 0.1.0-alpha)
APP_VERSION=0.1.0-alpha

# Application title for UI (default: CRIS - Criminal Reasoning Intelligence System)
APP_TITLE=CRIS - Criminal Reasoning Intelligence System

# Debug mode (default: true)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log format: console, json (default: console)
LOG_FORMAT=console

# Secret key for session encryption (change in production!)
SECRET_KEY=change_this_to_a_random_secret_key

# Session timeout in seconds (default: 3600)
SESSION_TIMEOUT=3600

# -----------------------------------------------------------------------------
# Plugin Configuration
# -----------------------------------------------------------------------------
# Plugins directory (default: ./plugins)
PLUGINS_DIR=./plugins

# Comma-separated list of enabled plugins
ENABLED_PLUGINS=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable OSINT agent (default: false)
ENABLE_OSINT=false

# Enable predictions agent (default: true)
ENABLE_PREDICTIONS=true

# Enable experimental features (default: false)
ENABLE_EXPERIMENTAL=false

# -----------------------------------------------------------------------------
# Geocoding Configuration
# -----------------------------------------------------------------------------
# Geocoding provider: nominatim, google (default: nominatim)
GEOCODING_PROVIDER=nominatim

# User agent for Nominatim requests (default: cris_investigative_system)
GEOCODING_USER_AGENT=cris_investigative_system

# Google Maps API key (required if using google geocoding)
GOOGLE_MAPS_API_KEY=

# Mapbox API key (for future map features)
MAPBOX_API_KEY=

# -----------------------------------------------------------------------------
# Map Defaults
# -----------------------------------------------------------------------------
# Default map center latitude (default: 40.7128 - New York)
DEFAULT_MAP_CENTER_LAT=40.7128

# Default map center longitude (default: -74.0060 - New York)
DEFAULT_MAP_CENTER_LON=-74.0060

# Default map zoom level (default: 12)
DEFAULT_MAP_ZOOM=12

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Maximum concurrent agents (default: 5)
MAX_CONCURRENT_AGENTS=5

# Cache TTL in seconds (default: 300)
CACHE_TTL=300

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30
